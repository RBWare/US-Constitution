<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical" 
	android:id="@+id/about_dialog_layout"
	>
	
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dip"
        >
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Use Light Theme"
                android:textSize="14sp"
                />
            <CheckBox
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:id="@+id/settings_dialog_switch_theme"
		        />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Show Splash Screen"
                android:textSize="14sp"
                />
            <CheckBox
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:id="@+id/settings_dialog_switch_splash"
		        />
        </TableRow>
    </TableLayout>
    
    <!-- TODO - Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:text="Save"
            android:id="@+id/settings_dialog_button_save"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:text="Cancel"
            android:id="@+id/settings_dialog_button_cancel"
            />
    </LinearLayout>
</LinearLayout>