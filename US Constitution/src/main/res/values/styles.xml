<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Toolbar" parent="Widget.AppCompat.Toolbar" />

    <style name="Toolbar.Light" parent="@style/Toolbar">
        <item name="android:background">@color/background_light</item>
    </style>

    <style name="Toolbar.Dark" parent="@style/Toolbar">
        <item name="android:background">@color/background_dark</item>
    </style>

    <style name="AppTheme.Light" parent="Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/Toolbar.Light</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@color/background_light</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat">
        <item name="android:actionBarStyle">@style/Toolbar.Dark</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@color/background_dark</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColor">@color/darkTextColor</item>
    </style>
</resources>